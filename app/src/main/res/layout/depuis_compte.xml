<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/displayTop"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:flexDirection="row"
            tools:ignore="MissingClass"
            app:alignItems="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_arrow_back_ios_black_24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Depuis le compte"
                android:textSize="30dp"

                android:textStyle="bold"
                 />
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Tout virement entrant ou sortant d'un compte épargne doit etre réalisé à partir ou vers un compte de dépot dont vous etes titulaire "
            android:textSize="15dp"
            android:textStyle="bold"
             />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/displayAllBenef"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:flexDirection="column"
            tools:ignore="MissingClass"
            app:alignItems="center">


        </com.google.android.flexbox.FlexboxLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>